all: main

main: main.o Orb.o Cells.o
	mpiCC main.o -o main

main.o: main.cpp
	mpiCC -o main.o constants.h

Orb.o: Orb.cpp Orb.h constants.h

Cells.o: Cells.cpp Cells.h constants.h

clean:
	rm *.o

#HEADERS = Orb.h Cells.h constants.h
#OBJECTS = main.o Orb.o Cells.o

HEADERS = Orb.h Cells.h constants.h
OBJECTS = Cells.o Orb.o main.o

CC = mpiCC #g++

all: program

%.o: %.c $(HEADERS)
	$(CC) -c $< -o $@

program: $(OBJECTS)
	$(CC) $(OBJECTS) -o $@

clean:
	-rm -f $(OBJECTS)
	-rm -f program

	TARGET = prog